datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model RSVP {
  id         Int      @id @default(autoincrement())
  code       String
  email      String
  guests     String
  phone      String
  attendance String   // non-nullable
  diet       String?  // optional
  message    String?  // optional
  createdAt  DateTime @default(now())
}